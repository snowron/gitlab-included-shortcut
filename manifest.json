{
  "name": "Gitlab Included Shortcut",
  "description": "It helps to open included yaml files in new tab with one click.",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "/images/green-play-icon.png"
      ],
      "matches": [
        "https://gitlab.com/*"
      ]
    }
  ],
  "permissions": [
    "scripting",
    "webNavigation"
  ],
  "host_permissions": [
    "https://gitlab.com/*"
  ],
  "icons": {
    "16": "/images/logo16.png",
    "32": "/images/logo32.png",
    "48": "/images/logo48.png",
    "128": "/images/logo128.png"
  }
}